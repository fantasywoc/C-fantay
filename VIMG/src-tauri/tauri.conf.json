{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "VIMG",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "os": {
        "all": true 
      },
      "clipboard": {
        "writeText": true,
        "readText": true
      },
    "dialog": {
        "all": false,
        "open": true
    },
    "protocol": {
        "all": false,
        "asset": true,
        "assetScope": [
            "$PICTURE"
        ]
    },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "vimg",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.vimg.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
